@using DemoWebBanVali.Models
@using PagedList.Mvc
@model PagedList.IPagedList<tDanhMucSP>
@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_LayoutSP.cshtml";
}
<div class="w3-row-padding w3-padding-16 w3-center" id="food">
    @{
        int i = 0;
        foreach (var item in Model)
        {
            i++;
            <div class="w3-quarter">
                <a href="@Url.Action("ChiTietSanPham", "SanPham", new {@MaSP = item.MaSP})">
                    <img src="@Url.Content("~/images/Product/" + item.Anh)" alt="" style="width:100%">

                </a>
                <h3>@item.TenSP</h3>
                <p>@item.GioiThieuSP</p>
            </div>
            if (i % 4 == 0)
            {
                <div style="clear: both">

                </div>
            }
        }
    }
</div>

<!-- Pagination -->
<div class="w3-center w3-padding-32">
    <div class="w3-bar"> 
        <a a href="#" class="w3-bar-item w3-button w3-hover-black">@Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLoai", new {page = page, MaLoai = ViewBag.MaLoai}))</a>
    </div>
</div>

